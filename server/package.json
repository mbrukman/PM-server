{
  "name": "kaholo-server",
  "version": "1.3.4",
  "description": "",
  "main": "app.js",
  "scripts": {
    "spec": "speculate --name=kaholo-server",
    "test": "jest api/tests -w 1 --forceExit",
    "start": "node app.js",
    "build": "cd ../console && ng build",
    "build:prod": "cd ../console && ng build --prod",
    "watch": "nodemon app.js",
    "install:all": "npm i && cd ../console && npm i",
    "eslint": "./node_modules/.bin/eslint ./api/tests"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run eslint && npm t"
    }
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es6": true,
      "jest": true
    },
    "parserOptions": {
      "ecmaVersion": 8
    },
    "extends": [
      "eslint:recommended",
      "google",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "linebreak-style": "off",
      "max-len": [
        "warn",
        {
          "code": 128
        }
      ],
      "require-jsdoc": "off"
    }
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bluebird": "3.5.1",
    "body-parser": "1.18.2",
    "del": "3.0.0",
    "dotenv": "^8.2.0",
    "express": "4.16.2",
    "express-winston": "3.0.0",
    "graphlib": "2.1.1",
    "jsonwebtoken": "8.5.1",
    "lodash": "4.17.10",
    "memory-streams": "0.1.3",
    "minimist": "1.2.0",
    "mongodb-memory-server": "^5.2.5",
    "mongoose": "5.4.20",
    "multer": "1.3.0",
    "node-schedule": "1.3.2",
    "request": "2.88.0",
    "rimraf": "2.6.2",
    "rxjs": "6.5.2",
    "socket.io": "2.0.4",
    "unzipper": "0.9.4",
    "winston": "3.1.0",
    "winston-mongodb": "4.0.3"
  },
  "devDependencies": {
    "chance": "^1.1.0",
    "eslint": "^6.4.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.0.7",
    "jest": "^24.9.0",
    "jest-circus": "^24.9.0",
    "jest-environment-node": "^24.9.0",
    "json-schema-faker": "^0.5.0-rc17",
    "prettier": "^1.18.2",
    "socket.io-client": "^2.3.0",
    "speculate": "1.7.4",
    "supertest": "^4.0.2"
  },
  "spec": {
    "nodeVersion": "> 10.13.0",
    "post": [
      "sudo mkdir -p /usr/lib/static_cdn/uploads"
    ]
  }
}
